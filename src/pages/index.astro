---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';

// Social Media metadata
const ogTitle = "SAFERR AI Lab - Safety, Reliability, and Robustness of AI";
const ogDescription = "SAFERR AI Lab is dedicated to advancing research in AI safety, reliability, and robustness. We achieve it by the alignment of AI systems with human values and goals.";
const ogImage = 'https://saferrai-lab.org/ogimage.png';
const ogUrl = "https://saferrai-lab.org";
---

<Layout 
  title={ogTitle}
  description={ogDescription}
  image={ogImage}
  url={ogUrl}
>
  
  <Hero />
  <Features />
</Layout>
