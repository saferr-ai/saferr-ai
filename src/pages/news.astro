---
import { news } from '../lib/data';
import Layout from '../layouts/Layout.astro';

// Function to format date
const formatDate = (date: Date): string => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout title="SAFERR AI Lab - News">
<section class="py-16">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold mb-8">News</h1>
    <div class="space-y-8">
      {news.map((item) => (
        <div class="p-6 bg-base-100 rounded-lg shadow-md border border-gray-100">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
            <h2 class="text-2xl font-semibold mb-2 md:mb-0">{item.title}</h2>
            <p class="text-gray-500">{formatDate(item.date)}</p>
          </div>
          <p class="text-gray-700 mb-4">{item.excerpt}</p>
          {item.link && (
            <a href={item.link} class="text-blue-500 hover:text-blue-700">
              Read more â†’
            </a>
          )}
        </div>
      ))}
    </div>
    </div>
  </section>
</Layout>
