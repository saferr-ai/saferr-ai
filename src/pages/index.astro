---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';

// Social Media metadata
const ogTitle = "SAFERR AI Lab - Safety, Reliability, and Robustness of AI";
const ogDescription = "SAFERR AI Lab is dedicated to advancing research in AI safety, reliability, and robustness.  We acheive it by the alignment of AI systems with human values and goals.";
const ogImage = 'https://saferrai-lab.org/ogimage.png';
const ogUrl = "https://saferrai-lab.org";
const ogLogo = "/logo.png";
---

<Layout 
  title={ogTitle}
  description={ogDescription}
>
  {/* Primary Meta Tags */}
  <meta name="title" content="SAFERR AI Lab | AI Safety, Reliability & Robustness" />
  <meta name="description" content="Advancing research in AI safety, reliability, and robustness. Aligning AI systems with human values. Explore our research, people, and publications." />
  <link rel="canonical" href="https://saferrai-lab.org/" />
  <meta name="robots" content="index, follow" />

  {/* Open Graph / Facebook */}
  <meta property="og:type" content="website" />
  <meta property="og:url" content={ogUrl} />
  <meta property="og:title" content="SAFERR AI Lab | AI Safety, Reliability & Robustness" />
  <meta property="og:description" content="Advancing research in AI safety, reliability, and robustness. Aligning AI systems with human values." />
  <meta property="og:image" content={ogImage} />
  <meta property="og:site_name" content="SAFERR AI Lab" />
  <meta property="og:locale" content="en_US" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />

  {/* Twitter */}
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="SAFERR AI Lab | AI Safety, Reliability & Robustness" />
  <meta name="twitter:description" content="Advancing research in AI safety, reliability, and robustness. Aligning AI systems with human values." />
  <meta name="twitter:image" content={ogImage} />

  {/* LinkedIn (uses Open Graph tags) */}

  {/* Additional Meta Tags */}
  <meta name="theme-color" content="#3b82f6" />
  <meta name="msapplication-TileColor" content="#3b82f6" />
  <meta name="msapplication-TileImage" content={ogImage} />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <meta name="apple-mobile-web-app-title" content="SAFERR AI Lab" />
  <meta name="application-name" content="SAFERR AI Lab" />
  <meta name="format-detection" content="telephone=no" />
  <meta name="mobile-web-app-capable" content="yes" />

  {/* Structured Data: Organization */}
  <script type="application/ld+json">{JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Organization',
    name: 'SAFERR AI Lab',
    url: 'https://saferrai-lab.org/',
    logo: 'https://saferrai-lab.org/logo.png',
    sameAs: [
      'https://github.com/saferrai',
      'https://www.linkedin.com/company/saferrai-lab/'
    ],
    description: 'Advancing research in AI safety, reliability, and robustness. Aligning AI systems with human values.'
  })}</script>

  <Hero />
  <Features />
</Layout>
